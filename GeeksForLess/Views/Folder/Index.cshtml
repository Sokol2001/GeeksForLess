@model IEnumerable<GeeksForLess.Models.Folder>

<div class="container">

    <div class="header">
        <a asp-controller="Home" asp-action="Index">Home</a>
        <a> | </a>
        <a asp-controller="Folder" asp-action="SaveDbToJson">Save</a>
    </div>

    @if (Model.Count() > 0)
    {
        @if (Model.First().IsSelected)
        {
            <div style="margin-top:25px">
                <p>"Folder" - @Model.First().Name</p>

                @foreach (var obj in Model)
                {
                    @if (Model.First().ChildFoldersKeys != null)
                    {
                        @if (Model.First().ChildFoldersKeys.Contains(obj.FolderKey.ToString()))
                        {
                            <a asp-controller="Folder" asp-route-Id="@obj.Id" asp-action="Index">
                                <p>@obj.Name</p>
                            </a>
                        }
                    }
                }

            </div>
        }
    }

</div>