@model IEnumerable<GeeksForLess.Models.Folder>

<div class="container">
        @if(Model.Count() > 0)
        {
            @if (Model.First().IsSelected)
            {   
                <div class="mb-3">
                    <h2 class="text-primary">"Folder" - @Model.First().Name</h2>

                    @foreach (var obj in Model)
                    {
                        @if (Model.First().ChildFoldersIds != null)
                        {
                            @if (Model.First().ChildFoldersIds.Contains(obj.Id.ToString()))
                            {
                                <a asp-controller="Folder" asp-route-Id="@obj.Id" asp-action="Index">
                                    <h3>@obj.Name</h3>
                                </a>

                            }
                        }
                    }
                    
                </div>
                
            }
        }
</div>